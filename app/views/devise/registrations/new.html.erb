<div class="container mt-5">
  <div class="row">
    <div class="mx-auto col-md-6 col-lg-4">
      <h2 class="text-center font-weight-lighter">Sign up to Newsboy</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white p-3 border rounded my-3", novalidate: true }) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: ["form-control", resource.errors.include?(:email) && "is-invalid"], "aria-describedby" => "email_validation_feedback", required: true %>
          <div id="email_validation_feedback" class="invalid-feedback">
            <%= resource.errors.full_messages_for(:email).join(", ") %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: ["form-control", resource.errors.include?(:password) && "is-invalid"], "aria-describedby" => "password_validation_confirmation", required: true %>
          <div id="password_validation_feedback" class="invalid-feedback">
            <%= resource.errors.full_messages_for(:password).join(", ") %>
          </div>
          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: ["form-control", resource.errors.include?(:password_confirmation) && "is-invalid"], "aria-describedby" => "password_confirmation_validation_feedback", required: true %>
          <div id="password_confirmation_validation_feedback" class="invalid-feedback">
            <%= resource.errors.full_messages_for(:password_confirmation).join(", ") %>
          </div>
        </div>

        <%= f.submit "Sign up", class: "btn btn-primary d-block w-100" %>
      <% end %>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>